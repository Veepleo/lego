{
  "name": "lego-sql",
  "version": "0.5.0",
  "description": "A lightweight SQL (string) builder using ES6 template strings. Lego embraces SQL instead of adding yet another abstraction layer.",
  "main": "index.js",
  "scripts": {
    "babel": "babel src -d lib",
    "coverage-html": "jscoverage lib lib-cov && NODE_COV=1 NODE_ENV=test mocha ./test/*.js -R html-cov > coverage.html && rm -rf lib-cov",
    "coverage": "jscoverage lib lib-cov && NODE_COV=1 NODE_ENV=test mocha ./test/*.js -R mocha-lcov-reporter > coverage.lcov && rm -rf lib-cov",
    "test": "NODE_ENV=test mocha -g '^' --reporter spec ./test/*.js",
    "coveralls": "cat ./coverage.lcov | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/martijndeh/lego.git"
  },
  "author": "Martijn de Haan",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/martijndeh/lego/issues"
  },
  "bin": {
    "lego": "lib/bin/cli.js"
  },
  "homepage": "https://github.com/martijndeh/lego#readme",
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.3.17",
    "babel-preset-es2015": "^6.3.13",
    "blanket": "^1.2.1",
    "coveralls": "^2.11.6",
    "jscoverage": "^0.6.0",
    "mocha": "^2.3.4",
    "mocha-lcov-reporter": "^1.0.0",
    "sinon": "^1.17.2"
  },
  "keywords": [
    "lego",
    "sql",
    "postgres",
    "knex",
    "sql builder",
    "template strings"
  ],
  "dependencies": {
    "chalk": "^1.1.1",
    "debug": "^2.2.0",
    "dotenv": "^1.2.0",
    "minimist": "^1.2.0",
    "pg": "^4.4.3"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
